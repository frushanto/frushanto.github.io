---
import { getSiteContent } from "../content/utils";
import { t, type Language } from "../i18n/utils";

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props as Props;
const siteContent = await getSiteContent(lang);
const contactHref = siteContent.social?.email
  ? `mailto:${siteContent.social.email}`
  : '#';
const primaryCta = lang === 'de' ? 'Kontakt' : 'Contact';
const secondaryCta = lang === 'de' ? 'Expertise ansehen' : 'View expertise';
const offerLine = siteContent.description;
---

<div
  id="hero"
  class="relative isolate overflow-hidden bg-white py-24 md:h-screen"
  style={`--accent-color: ${siteContent.accentColor}`}
>
  <!-- Gradient overlay -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 800px 1200px at 0% 0%, ${siteContent.accentColor}40 0%, ${siteContent.accentColor}25 20%, ${siteContent.accentColor}10 40%, rgba(255, 255, 255, 0.3) 70%, rgba(255, 255, 255, 0.8) 90%, white 100%);`}
  >
  </div>
  <!-- Dark mode gradient overlay -->
  <div
    class="absolute inset-0 -z-10 hidden"
    style={`background: radial-gradient(ellipse 800px 1200px at 0% 0%, ${siteContent.accentColor}30 0%, ${siteContent.accentColor}15 20%, ${siteContent.accentColor}05 40%, rgba(31, 41, 55, 0.5) 70%, rgba(17, 24, 39, 0.8) 90%, rgb(3, 7, 17) 100%);`}
  >
  </div>
  <svg
    aria-hidden="true"
    class="absolute inset-0 -z-10 size-full stroke-gray-200 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
  >
    <defs>
      <pattern
        x="50%"
        y={-1}
        id="0787a7c5-978c-4f66-83c7-11c213f99cb7"
        width={200}
        height={200}
        patternUnits="userSpaceOnUse"
      >
        <path d="M.5 200V.5H200" fill="none"></path>
      </pattern>
      <pattern
        id="programming-symbols"
        x="0"
        y="0"
        width="400"
        height="400"
        patternUnits="userSpaceOnUse"
      >
        <text
          x="50"
          y="50"
          fill={siteContent.accentColor}
          font-family="monospace"
          font-size="24"
          transform="rotate(-15)">&lt;/&gt;</text
        >
        <text
          x="150"
          y="100"
          fill={siteContent.accentColor}
          font-family="monospace"
          font-size="20"
          transform="rotate(10)">{}</text
        >
        <text
          x="250"
          y="80"
          fill={siteContent.accentColor}
          font-family="monospace"
          font-size="18"
          transform="rotate(-5)">=&gt;</text
        >
        <text
          x="100"
          y="200"
          fill={siteContent.accentColor}
          font-family="monospace"
          font-size="22"
          transform="rotate(15)">[]</text
        >
        <text
          x="300"
          y="180"
          fill={siteContent.accentColor}
          font-family="monospace"
          font-size="20"
          transform="rotate(-10)">&lt;&gt;</text
        >
        <text
          x="200"
          y="250"
          fill={siteContent.accentColor}
          font-family="monospace"
          font-size="24"
          transform="rotate(5)">()</text
        >
        <text
          x="50"
          y="320"
          fill={siteContent.accentColor}
          font-family="monospace"
          font-size="18"
          transform="rotate(-8)">::</text
        >
        <text
          x="350"
          y="300"
          fill={siteContent.accentColor}
          font-family="monospace"
          font-size="22"
          transform="rotate(12)">==</text
        >
        <text
          x="150"
          y="350"
          fill={siteContent.accentColor}
          font-family="monospace"
          font-size="20"
          transform="rotate(-15)">++</text
        >
        <text
          x="250"
          y="370"
          fill={siteContent.accentColor}
          font-family="monospace"
          font-size="24"
          transform="rotate(8)">;</text
        >
      </pattern>
    </defs>
    <rect
      fill="url(#programming-symbols)"
      width="100%"
      height="100%"
      opacity="0.2"></rect>
    <rect
      fill="url(#0787a7c5-978c-4f66-83c7-11c213f99cb7)"
      width="100%"
      height="100%"
      stroke-width={0}></rect>
  </svg>
  <div class="h-full mx-auto p-8 sm:p-12 md:p-24 flex items-center">
    <div>
      <h2
        class="text-pretty text-xl sm:text-2xl md:text-5xl font-bold tracking-tight text-gray-700 animate-fade-in"
      >
        {t(lang, 'hero.greeting')}
      </h2>
      <h1
        class="mt-6 sm:mt-8 md:mt-10 text-pretty text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-bold tracking-tight text-gray-800 animate-fade-in animation-delay-200"
      >
        I'm <span style={{ color: siteContent.accentColor }}
          >{siteContent.name}</span
        >
      </h1>
      <p
        class="mt-4 sm:mt-6 md:mt-8 text-pretty text-base sm:text-lg md:text-xl/8 font-medium text-gray-600 animate-fade-in animation-delay-400"
      >
        {siteContent.titleDisplay || siteContent.title}
      </p>
      <p class="mt-4 text-pretty text-base sm:text-lg md:text-xl text-gray-600 animate-fade-in animation-delay-400">
        {offerLine}
      </p>
      <div class="mt-6 sm:mt-8 flex flex-wrap items-center gap-3 animate-fade-in animation-delay-600">
        <a
          href={contactHref}
          class="inline-flex items-center justify-center rounded-lg bg-black px-5 py-2.5 text-base font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:shadow-md"
        >
          {primaryCta}
        </a>
        <a
          href="#expertise"
          class="inline-flex items-center justify-center rounded-lg border border-gray-300 px-5 py-2.5 text-base font-semibold text-gray-800 transition hover:border-gray-400 hover:text-gray-900"
        >
          {secondaryCta}
        </a>
      </div>
    </div>
  </div>
  <div
    class="absolute bottom-0 left-0 right-0 p-8 sm:p-12 md:p-24 flex gap-x-4 sm:gap-x-6 md:gap-x-8 text-gray-700 animate-fade-in animation-delay-600"
  >
    {
      siteContent.social?.email && (
        <a
          href={`mailto:${siteContent.social.email}`}
          aria-label="Email"
          class="transition-colors duration-300 hover:text-[var(--accent-color)]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
            <path d="M3 7l9 6l9 -6" />
          </svg>
        </a>
      )
    }
    <!-- LinkedIn link disabled by request -->
    <!--
    {
      siteContent.social?.linkedin && (
        <a
          href={siteContent.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          class="transition-colors duration-300 hover:text-[var(--accent-color)]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M8 11v5" />
              <path d="M8 8v.01" />
              <path d="M12 16v-5" />
              <path d="M16 16v-3a2 2 0 1 0 -4 0" />
              <path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
            </>
          </svg>
        </a>
      )
    }
    -->
    {
      siteContent.social?.twitter && (
        <a
          href={siteContent.social.twitter}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Twitter"
          class="transition-colors duration-300 hover:text-[var(--accent-color)]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M4 4l11.733 16h4.267l-11.733 -16z" />
              <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" />
            </>
          </svg>
        </a>
      )
    }
    {
      siteContent.social?.github && (
        <a
          href={siteContent.social.github}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          class="transition-colors duration-300 hover:text-[var(--accent-color)]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
            </>
          </svg>
        </a>
      )
    }
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
  }
</style>

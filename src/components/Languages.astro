---
import { getSiteConfig } from "../config";
import { t } from "../i18n/utils";

interface Props {
  lang?: 'en' | 'de';
}

const { lang = 'en' } = Astro.props;
const siteConfig = getSiteConfig(lang as 'en' | 'de');
---

<section id="languages" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900"
        >
          {t(lang, 'sections.languages')}
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
      </div>

      <div class="lg:col-span-8 space-y-6">
        {
          siteConfig.languages.map((language) => (
            <div class="border-l-4 pl-6 py-2" style={`border-color: ${siteConfig.accentColor}`}>
              <h3 class="text-xl sm:text-2xl md:text-3xl font-semibold text-gray-900">
                {language.name}
              </h3>
              <p class="text-base sm:text-lg md:text-xl text-gray-600 mt-1">
                {language.proficiency}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

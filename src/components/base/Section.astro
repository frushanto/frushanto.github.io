---
interface Props {
  id?: string;
  hasBg?: boolean;
  class?: string;
}

const { id, hasBg = false, class: className } = Astro.props;
const bgClass = hasBg 
  ? 'bg-gray-50'
  : 'bg-white';
---

<section {id} class={`p-8 sm:p-12 md:p-16 lg:p-24 ${bgClass} transition-colors duration-200 ${className || ''}`}>
  <slot />
</section>
